<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_primary"
    tools:context=".ui.student.home.DetailCompanyStudentFragment">

    <View
        android:id="@+id/iv_bar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@color/gray_primary2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Bartittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proza_libre"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/iv_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_bar" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="40dp"
        android:layout_height="45dp"
        android:layout_marginEnd="100dp"
        android:src="@drawable/ic_back_button"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Bartittle"
        app:layout_constraintEnd_toStartOf="@+id/tv_Bartittle"
        app:layout_constraintTop_toTopOf="@+id/tv_Bartittle"
        app:tint="@color/white" />

    <!-- <ScrollView
         android:layout_width="match_parent"
         android:layout_height="0dp"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/iv_bar">

         <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">-->

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        android:scaleType="fitXY"
        android:src="@drawable/spongebob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_bar"
        app:shapeAppearance="@style/profilePicture" />

    <TextView
        android:id="@+id/tv_companytNameTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/open_sans"
        android:text="Nama perusahaan"
        android:textColor="@color/gray_hintText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_profilePicture" />

    <TextView
        android:id="@+id/tv_companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companytNameTittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_companytNameTittle" />

    <TextView
        android:id="@+id/tv_companyAddresslTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="Alamat perusahaan"
        android:textColor="@color/gray_hintText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyName"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyName" />

    <TextView
        android:id="@+id/tv_companyAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="Alamat"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyAddresslTittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyAddresslTittle" />

    <TextView
        android:id="@+id/tv_companyContactNameTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="Nama PIC"
        android:textColor="@color/gray_hintText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyAddress"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyAddress" />

    <TextView
        android:id="@+id/tv_companyContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="Nama PIC"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyContactNameTittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactNameTittle" />

    <TextView
        android:id="@+id/tv_companyContactPhoneNumberTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="No telepon PIC"
        android:textColor="@color/gray_hintText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyContactName"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactName" />

    <TextView
        android:id="@+id/tv_companyContactPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="No Telepon PIC"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyContactPhoneNumberTittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactPhoneNumberTittle" />

    <TextView
        android:id="@+id/tv_companyContactEmailTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/open_sans"
        android:text="Email PIC"
        android:textColor="@color/gray_hintText"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyContactPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactPhoneNumber" />

    <TextView
        android:id="@+id/tv_companyContactEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/open_sans"
        android:text="Email PIC"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/tv_companyContactEmailTittle"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactEmailTittle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Lamar Perusahaan"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_companyContactEmail" />
    <!-- </androidx.constraintlayout.widget.ConstraintLayout>
 </ScrollView>-->

</androidx.constraintlayout.widget.ConstraintLayout>