<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.register.RegisterCompanyFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="30dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_welcome_screen3"
        app:layout_constraintBottom_toTopOf="@+id/tv_subTittleRegisterCompany"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewBG"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="@drawable/bg_welcomeloginregister"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_subTittleRegisterCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/proza_libre"
        android:text="Sign Up "
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewBG" />

    <EditText
        android:id="@+id/et_companyName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Masukkan nama perusahaan"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hintText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subTittleRegisterCompany" />

    <EditText
        android:id="@+id/et_companyAddress"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Masukkan alamat perusahaan"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hintText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_companyName"
        app:layout_constraintStart_toStartOf="@+id/et_companyName"
        app:layout_constraintTop_toBottomOf="@+id/et_companyName" />

    <EditText
        android:id="@+id/et_companyContactName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Masukkan nama PIC"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hintText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_companyAddress"
        app:layout_constraintStart_toStartOf="@+id/et_companyAddress"
        app:layout_constraintTop_toBottomOf="@+id/et_companyAddress" />


    <EditText
        android:id="@+id/et_companyPhoneNumber"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Masukkan nomor telepon PIC"
        android:inputType="phone"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hintText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_companyContactName"
        app:layout_constraintStart_toStartOf="@+id/et_companyContactName"
        app:layout_constraintTop_toBottomOf="@+id/et_companyContactName" />

    <EditText
        android:id="@+id/et_verificationNumber"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:hint="Masukkan nomor verifikasi"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_hintText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_companyPhoneNumber"
        app:layout_constraintStart_toStartOf="@+id/et_companyPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/et_companyPhoneNumber" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Daftar"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_sudahPunyaAkunRegisterCompany"
        app:layout_constraintEnd_toEndOf="@+id/et_companyPhoneNumber"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_companyPhoneNumber"
        app:layout_constraintTop_toBottomOf="@+id/et_verificationNumber" />

    <TextView
        android:id="@+id/tv_sudahPunyaAkunRegisterCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="@font/proza_libre"
        android:text="Sudah punya akun?"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_companyName" />

    <TextView
        android:id="@+id/tv_companySignInNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/proza_libre"
        android:text="Masuk"
        android:textColor="@color/blue_Register"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sudahPunyaAkunRegisterCompany"
        app:layout_constraintStart_toEndOf="@+id/tv_sudahPunyaAkunRegisterCompany"
        app:layout_constraintTop_toTopOf="@+id/tv_sudahPunyaAkunRegisterCompany" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/progressBarCompanyRegister"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/tv_sudahPunyaAkunRegisterCompany"
        app:layout_constraintEnd_toEndOf="@+id/et_verificationNumber"
        app:layout_constraintStart_toStartOf="@+id/et_verificationNumber"
        app:layout_constraintTop_toBottomOf="@+id/et_verificationNumber"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lottie_loading" />

</androidx.constraintlayout.widget.ConstraintLayout>