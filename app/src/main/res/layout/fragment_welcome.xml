<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.welcome.WelcomeFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="30dp"
        android:scaleType="fitCenter"
        android:src="@drawable/img_logo_ilc"
        app:layout_constraintBottom_toTopOf="@+id/tv_subTittleWelcomePage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="540dp"
        android:background="@drawable/bg_welcomeloginregister"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tv_subTittleWelcomePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/proza_libre"
        android:text="Sign in as: "
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_admin"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Admin"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_student"
        app:layout_constraintEnd_toEndOf="@+id/btn_company"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_company"
        app:layout_constraintTop_toBottomOf="@+id/btn_company" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_student"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Siswa"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_admin"
        app:layout_constraintStart_toStartOf="@+id/btn_admin" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_company"
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/bg_btn"
        android:fontFamily="@font/roboto"
        android:text="Perusahaan"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tv_subTittleWelcomePage"
        app:layout_constraintStart_toStartOf="@+id/tv_subTittleWelcomePage"
        app:layout_constraintTop_toBottomOf="@+id/tv_subTittleWelcomePage" />
</androidx.constraintlayout.widget.ConstraintLayout>